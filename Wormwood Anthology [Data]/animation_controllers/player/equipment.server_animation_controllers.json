{
	"format_version": "1.10.0",
	"animation_controllers": {
		// The Fury of Wormwood //
		"controller.animation.server_player.player_ranged_weapons_general": {
			"initial_state": "default",
			"states": {
				"default": {
					"transitions": [
						{
							"chinese_assault_rifle.firing": "query.mark_variant == 1"
						},
						{
							"laser_pistol.firing": "query.mark_variant == 2"
						},
						{
							"ozutsu.firing": "query.mark_variant == 3"
						},
						{
							"lever_action_rifle.firing": "query.mark_variant == 4"
						}
					]
				},
				"chinese_assault_rifle.firing": {
					"on_entry": [
						"@s modified_player:remove_client_flag.chinese_assault_rifle"
					],
					"transitions": [
						{
							"default": "1"
						}
					]
				},
				"laser_pistol.firing": {
					"on_entry": [
						"@s modified_player:remove_client_flag.laser_pistol"
					],
					"transitions": [
						{
							"default": "1"
						}
					]
				},
				"ozutsu.firing": {
					"on_entry": [
						"@s modified_player:remove_client_flag.ozutsu"
					],
					"transitions": [
						{
							"default": "1"
						}
					]
				},
				"lever_action_rifle.firing": {
					"on_entry": [
						"@s modified_player:remove_client_flag.lever_action_rifle"
					],
					"transitions": [
						{
							"default": "1"
						}
					]
				}
			}
		},
		// World Beyond //
		"controller.animation.item_equip_sounds": {
			"initial_state": "default",
			"states": {
				"default": {
					"transitions": [
						{
							"adventure_hats": "query.is_item_name_any('slot.armor.head', 0, 'wormwood:adventure_hat') || query.is_item_name_any('slot.armor.head', 0, 'wormwood:colourful_adventure_hat')"
						}
					]
				},
				"adventure_hats": {
					"on_entry": [
						"/playsound armor.equip_leather"
					],
					"transitions": [
						{
							"default": "!query.is_item_name_any('slot.armor.head', 0, 'wormwood:adventure_hat') || !query.is_item_name_any('slot.armor.head', 0, 'wormwood:colourful_adventure_hat')"
						}
					]
				}
			}
		}
	}
}