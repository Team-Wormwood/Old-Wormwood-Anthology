{
	"format_version": "1.10.0",
	"animation_controllers": {
		// The Fury of Wormwood //
		"controller.animation.server_player.player_ranged_weapons_general": {
			"initial_state": "default",
			"states": {
				"default": {
					"transitions": [
						{
							"chinese_assault_rifle.firing": "query.mark_variant == 1"
						}
					]
				},
				"chinese_assault_rifle.firing": {
					"on_entry": [
						"@s modified_player:remove_client_flag.chinese_assault_rifle"
					],
					"transitions": [
						{
							"default": "1"
						}
					]
				}
			}
		},
		"controller.animation.wormwood.player.ranged_weapons": {
			"initial_state": "default",
			"states": {
				"default": {
					"animations": [
						"controller.chinese_assault_rifle"
					]
				}
			}
		},
		"controller.animation.wormwood.player.chinese_assault_rifle": {
			"initial_state": "default",
			"states": {
				"default": {
					"transitions": [
						{
							"firing.chinese_assault_rifle": "query.is_using_item && query.is_item_name_any('slot.weapon.mainhand', 0, 'wormwood:chinese_assault_rifle')"
						}
					]
				},
				"buffer.chinese_assault_rifle": {
					"animations": [
						"chinese_assault_rifle.cooldown"
					],
					"transitions": [
						{
							"default": "query.all_animations_finished"
						}
					]
				},
				"firing.chinese_assault_rifle": {
					"on_entry": [
						"@s modified_player:projectile_shot.chinese_assault_rifle"
					],
					"transitions": [
						{
							"buffer.chinese_assault_rifle": "query.all_animations_finished"
						}
					]
				}
			}
		},
		// World Beyond //
		"controller.animation.item_equip_sounds": {
			"initial_state": "default",
			"states": {
				"default": {
					"transitions": [
						{
							"adventure_hats": "query.is_item_name_any('slot.armor.head', 0, 'wormwood:adventure_hat') || query.is_item_name_any('slot.armor.head', 0, 'wormwood:colourful_adventure_hat')"
						}
					]
				},
				"adventure_hats": {
					"on_entry": [
						"/playsound armor.equip_leather"
					],
					"transitions": [
						{
							"default": "!query.is_item_name_any('slot.armor.head', 0, 'wormwood:adventure_hat') || !query.is_item_name_any('slot.armor.head', 0, 'wormwood:colourful_adventure_hat')"
						}
					]
				}
			}
		}
	}
}