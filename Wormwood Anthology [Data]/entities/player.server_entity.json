{
	"format_version": "1.18.20",
	"minecraft:entity": {
		"description": {
			"identifier": "minecraft:player",
			"is_experimental": false,
			"is_spawnable": false,
			"is_summonable": false,
			"scripts": {
				"animate": [
					"controller.ranged_weapons",
					"controller.advancements",
					"advancement.feet_wet",
					"advancement.adventuring_journey",
					"solar_medallion",
					"flag_items"
				]
			},
			"animations": {
				// Controllers // 
				"controller.ranged_weapons": "controller.animation.wormwood.player.ranged_weapons",
				"controller.chinese_assault_rifle": "controller.animation.wormwood.player.chinese_assault_rifle",
				"controller.advancements": "controller.animation.server.player_advancements.general",
				"advancement.feet_wet": "controller.animation.server.player_advancements.feet_wet",
				"advancement.adventuring_journey": "controller.animation.server.player_advancements.adventuring_journey",
				"solar_medallion": "controller.animation.solar_medallion",
				"flag_items": "controller.animation.flag_items",
				// Animations // 
				"chinese_assault_rifle.firing": "animation.wormwood.player.chinese_assault_rifle.firing",
				"chinese_assault_rifle.cooldown": "animation.wormwood.player.chinese_assault_rifle.cooldown"
			}
		},
		"component_groups": {
			// ------------------------ // 
			//   The Fury of Wormwood    //
			// ------------------------ // 
			// Projectile Shooters //
			"wormwood:chinese_assault_rifle.projectile_shooter": {
				"minecraft:spawn_entity": {
					"entities": {
						"single_use": true,
						"min_wait_time": 0,
						"max_wait_time": 0,
						"spawn_sound": "none",
						"spawn_event": "minecraft:entity_spawned",
						"spawn_entity": "wormwood:bullet.chinese_assault_rifle"
					}
				},
				"minecraft:shooter": {
					"def": "wormwood:bullet.chinese_assault_rifle"
				},
				"minecraft:environment_sensor": {
					"triggers": {
						"event": "modified_player:remove_shooter.chinese_assault_rifle"
					}
				}
			},
			// Firing States //
			"wormwood:chinese_assault_rifle.can_fire": {
				"minecraft:mark_variant": {
					"value": 1
				}
			},
			"wormwood:chinese_assault_rifle.cannot_fire": {
				"minecraft:mark_variant": {
					"value": 2
				}
			},
			// ------------------------ // 
			//   	  World Beyond         //
			// ------------------------ // 
			// Advancements //
			"wormwood:advancement.general": {
				"minecraft:mark_variant": {
					"value": 0
				}
			},
			"wormwood:advancement.feet_wet": {
				"minecraft:mark_variant": {
					"value": 1
				}
			},
			"wormwood:advancement.adventuring_journey": {
				"minecraft:mark_variant": {
					"value": 2
				}
			},
			// Sneaking //
			"wormwood:hitbox.sneaking": {
				"minecraft:collision_box": {
					"width": 0.6,
					"height": 1.45
				}
			},
			"wormwood:hitbox.default": {
				"minecraft:collision_box": {
					"width": 0.6,
					"height": 1.8
				}
			},
			// ------------------------ // 
			//  Vanilla Component Groups  //
			// ------------------------ // 
			"minecraft:add_bad_omen": {
				"minecraft:spell_effects": {
					"add_effects": [
						{
							"effect": "bad_omen",
							"duration": 6000,
							"display_on_screen_animation": true
						}
					]
				},
				"minecraft:timer": {
					"time": [
						0.0,
						0.0
					],
					"looping": false,
					"time_down_event": {
						"event": "minecraft:clear_add_bad_omen",
						"target": "self"
					}
				}
			},
			"minecraft:clear_bad_omen_spell_effect": {
				"minecraft:spell_effects": {}
			},
			"minecraft:raid_trigger": {
				"minecraft:raid_trigger": {
					"triggered_event": {
						"event": "minecraft:remove_raid_trigger",
						"target": "self"
					}
				},
				"minecraft:spell_effects": {
					"remove_effects": "bad_omen"
				}
			}
		},
		"components": {
			// General Attribute Components //
			"minecraft:conditional_bandwidth_optimization": {},
			"minecraft:is_hidden_when_invisible": {},
			"minecraft:block_climber": {},
			"minecraft:can_climb": {},
			"minecraft:physics": {},
			"minecraft:pushable": {},
			"minecraft:insomnia": {},
			"minecraft:type_family": {
				"family": [
					"player"
				]
			},
			"minecraft:experience_reward": {
				"on_death": "Math.Min(query.player_level * 7, 100)"
			},
			"minecraft:loot": {
				"table": "loot_tables/empty.json"
			},
			"minecraft:movement": {
				"value": 0.1
			},
			"minecraft:hurt_on_condition": {
				"damage_conditions": [
					{
						"filters": {
							"test": "in_lava",
							"subject": "self",
							"operator": "==",
							"value": true
						},
						"cause": "lava",
						"damage_per_tick": 4
					}
				]
			},
			"minecraft:attack": {
				"damage": 1
			},
			"minecraft:exhaustion_values": {
				"heal": 6,
				"jump": 0.05,
				"sprint_jump": 0.2,
				"mine": 0.005,
				"attack": 0.1,
				"damage": 0.1,
				"walk": 0.0,
				"sprint": 0.01,
				"swim": 0.01
			},
			"minecraft:player.saturation": {
				"value": 5,
				"max": 20
			},
			"minecraft:player.exhaustion": {
				"value": 0,
				"max": 20
			},
			"minecraft:player.level": {
				"value": 0,
				"max": 24791
			},
			"minecraft:player.experience": {
				"value": 0,
				"max": 1
			},
			"minecraft:breathable": {
				"total_supply": 15,
				"suffocate_time": -1,
				"inhale_time": 3.75,
				"generates_bubbles": false
			},
			"minecraft:nameable": {
				"always_show": true,
				"allow_name_tag_renaming": false
			},
			"minecraft:rideable": {
				"seat_count": 2,
				"family_types": [
					"parrot_tame"
				],
				"pull_in_entities": true,
				"seats": [
					{
						"position": [
							0.4,
							-0.2,
							-0.1
						],
						"min_rider_count": 0,
						"max_rider_count": 0,
						"lock_rider_rotation": 0
					},
					{
						"position": [
							-0.4,
							-0.2,
							-0.1
						],
						"min_rider_count": 1,
						"max_rider_count": 2,
						"lock_rider_rotation": 0
					}
				]
			},
			"minecraft:environment_sensor": {
				"triggers": [
					{
						"filters": {
							"all_of": [
								{
									"test": "has_mob_effect",
									"subject": "self",
									"value": "bad_omen"
								},
								{
									"test": "is_in_village",
									"subject": "self",
									"value": true
								}
							]
						},
						"event": "minecraft:trigger_raid"
					},
					{
						"filters": {
							"test": "is_sneaking",
							"subject": "self",
							"value": true
						},
						"event": "modified_player:sneak"
					},
					{
						"filters": {
							"test": "is_sneaking",
							"subject": "self",
							"value": false
						},
						"event": "modified_player:stand"
					}
				]
			},
			"minecraft:damage_sensor": {
				"triggers": {
					"on_damage": {
						"filters": {
							"all_of": [
								{
									"test": "has_equipment",
									"domain": "head",
									"value": "worldbeyond:shulker_hat"
								}
							]
						},
						"cause": "fatal",
						"deals_damage": false,
						"event": "player:stasis_chamber.lethal_damage"
					}
				}
			}
		},
		"events": {
			// Modified Events //
			"minecraft:entity_spawned": {
				"add": {
					"component_groups": [
						"wormwood:chinese_assault_rifle.can_fire",
						"wormwood:hitbox.default"
					]
				}
			},
			// Stasis Chamber //
			"modified_player:stasis_chamber.lethal_damage": {
				"run_command": {
					"command": [
						"effect @s resistance 1 12",
						"effect @s absorption 8 4",
						"effect @s instant_health 1 255",
						"effect @s regeneration 8 3",
						"effect @s fire_resistance 8",
						"replaceitem entity @s slot.armor.head -1 air",
						"tp @s @e[type=worldbeyond:stasis_eye]"
					]
				}
			},
			// Advancements Events //
			"modified_player:advancement.clear_cooldown": {
				"add": {
					"component_groups": [
						"worldbeyond:advancement.general"
					]
				}
			},
			"modified_player:advancement_get.feet_wet": {
				"add": {
					"component_groups": [
						"worldbeyond:advancement.feet_wet"
					]
				}
			},
			"modified_player:advancement_get.adventuring_journey": {
				"add": {
					"component_groups": [
						"worldbeyond:advancement.adventuring_journey"
					]
				}
			},
			// Sneaking Events //
			"modified_player:sneak": {
				"add": {
					"component_groups": [
						"wormwood:hitbox.sneaking"
					]
				},
				"remove": {
					"component_groups": [
						"wormwood:hitbox.default"
					]
				}
			},
			"modified_player:stand": {
				"add": {
					"component_groups": [
						"wormwood:hitbox.default"
					]
				},
				"remove": {
					"component_groups": [
						"wormwood:hitbox.sneaking"
					]
				}
			},
			// Shooting Events //
			"modified_player:projectile_shot.chinese_assault_rifle": {
				"add": {
					"component_groups": [
						"wormwood:chinese_assault_rifle.projectile_shooter",
						"wormwood:chinese_assault_rifle.cannot_fire"
					]
				},
				"remove": {
					"component_groups": [
						"wormwood:chinese_assault_rifle.can_fire"
					]
				}
			},
			// Removal Events //
			"modified_player:remove_all_cooldowns": {
				"add": {
					"component_groups": [
						"wormwood:chinese_assault_rifle.can_fire"
					]
				},
				"remove": {
					"component_groups": [
						"wormwood:chinese_assault_rifle.cannot_fire"
					]
				}
			},
			"modified_player:remove_shooter.chinese_assault_rifle": {
				"remove": {
					"component_groups": [
						"wormwood:chinese_assault_rifle.projectile_shooter"
					]
				}
			},
			"modified_player:remove_cooldown.chinese_assault_rifle": {
				"add": {
					"component_groups": [
						"wormwood:chinese_assault_rifle.can_fire"
					]
				},
				"remove": {
					"component_groups": [
						"wormwood:chinese_assault_rifle.cannot_fire"
					]
				}
			},
			// Vanilla Events //
			"minecraft:gain_bad_omen": {
				"add": {
					"component_groups": [
						"minecraft:add_bad_omen"
					]
				}
			},
			"minecraft:clear_add_bad_omen": {
				"remove": {
					"component_groups": [
						"minecraft:add_bad_omen"
					]
				},
				"add": {
					"component_groups": [
						"minecraft:clear_bad_omen_spell_effect"
					]
				}
			},
			"minecraft:trigger_raid": {
				"add": {
					"component_groups": [
						"minecraft:raid_trigger"
					]
				}
			},
			"minecraft:remove_raid_trigger": {
				"remove": {
					"component_groups": [
						"minecraft:raid_trigger"
					]
				}
			}
		}
	}
}